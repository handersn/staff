<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.staff.dao.StaffDao">

  <resultMap type="Staff" id="staffMap">
    <id column="eno" property="eno"/>
    <result column="position" property="position"/>
    <result column="name" property="name"/>
    <result column="email" property="email"/>
    <result column="phone" property="phone"/>
  </resultMap>
  
  <sql id="staffSelect">
  	SELECT eno,position,name,email,phone
  	FROM steps
  </sql>
  
  <select id="selectAllStaffs" resultMap="staffMap">
    <include refid="staffSelect"/>
  </select>
  
  <select id="selectStaffByEno" parameterType="int" resultType="staffMap">
  	<include refid="staffSelect"/>
  	WHERE eno = #{eno}
  </select>
  
  <select id="selectStaffsByName" parameterType="String" resultType="staffMap">
  	<include refid="staffSelect"/>
  	WHERE name = #{name}
  </select>
  
  <select id="selectStaffsByPosition" parameterType="String" resultType="staffMap">
  	<include refid="staffSelect"/>
  	WHERE position = #{position}
  </select>
  
  <select id="selectStaffsByEmail" parameterType="String" resultType="staffMap">
  	<include refid="staffSelect"/>
  	WHERE email = #{email}
  </select>
  
  <select id="selectStaffsByPhone" parameterType="int" resultType="staffMap">
  	<include refid="staffSelect"/>
  	WHERE phone = #{phone}
  </select>
  
  <insert id="insert" parameterType="Staff">
    INSERT INTO steps(position,name,email,phone) 
    VALUES (#{position}, #{name}, #{email}, #{phone})
  </insert>
  
  <update id="update" parameterType="Staff">
    UPDATE steps
    SET position = #{position},
        phone = #{phone}, 
        name = #{name}, 
        email = #{email}, 
        phone = #{phone}
    WHERE eno = #{eno}
  </update>
  
  <delete id="delete" parameterType="int">
  	DELETE FROM steps WHERE eno=#{eno}
  </delete>
</mapper>
